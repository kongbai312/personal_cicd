{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "*.ts",
    "src/mock/**/*.json",
    "src/**/*.ts",
    "src/**/*.js",
    "src/assets/json/*.json",
    "src/assets/md/*.md",
    "src/hooks/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
